generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  STORE_MANAGER
}

enum VisitStatus {
  SCHEDULED
  COMPLETED
  MISSED
  CANCELLED
}

enum StoreItemCategory {
  CLOTHING
  FOOTWEAR
  ACCESSORIES
}


/* =========================
   USER
========================= */

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String   // ✅ REQUIRED
  password      String?
  emailVerified DateTime?
  role          UserRole @default(CUSTOMER)

  // ✅ Phone (structured)
  phoneCountry String?
  phoneArea    String?
  phoneNumber  String   // ✅ REQUIRED

  // ✅ Address (required)
  city   String
  state  String
  zip    String

  // Optional profile
  age        Int?
  gender     String?
  heightCm   Int?
  weightKg   Int?
  occupation String?

  // Relations
  stores   Store[]
  visits   Visit[]
  accounts Account[]
  sessions Session[]

  // Verification / reset
  verificationToken         String?   @unique
  verificationTokenExpires  DateTime?
  resetPasswordToken        String?   @unique
  resetPasswordTokenExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/* =========================
   STORE
========================= */

model Store {
  id        String @id @default(cuid())
  managerId String

  name String

  // ✅ Phone (structured)
  phoneCountry String?
  phoneArea    String?
  phoneNumber  String   // ✅ REQUIRED

  // ✅ Address (required)
  country      String
  city         String
  state        String
  zip          String
  street       String
  streetNumber String
  floor        String?
  items        StoreItem[]


  categories String[]

  manager   User       @relation(fields: [managerId], references: [id], onDelete: Cascade)
  visits    Visit[]
  discounts Discount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/* =========================
   VISIT
========================= */

model Visit {
  id         String  @id @default(cuid())
  userId     String
  storeId    String
  discountId String?

  scheduledDate DateTime
  scheduledTime String
  actualVisit   DateTime?

  status VisitStatus @default(SCHEDULED)

  discountUnlocked Boolean @default(false)
  discountUsed     Boolean @default(false)
  discountAmount   Float?

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  store    Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  discount Discount? @relation(fields: [discountId], references: [id])

  createdAt DateTime @default(now())
}

/* =========================
   DISCOUNT
========================= */

model Discount {
  id      String @id @default(cuid())
  storeId String

  title           String
  description     String
  discountPercent Float
  discountAmount  Float?
  validFrom       DateTime
  validTo         DateTime
  maxUses         Int?
  currentUses     Int      @default(0)
  svdOnly         Boolean  @default(true)

  store  Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  visits Visit[]

  createdAt DateTime @default(now())
}

model StoreItem {
  id          String   @id @default(uuid())
  storeId     String

  name        String
  category    StoreItemCategory
  description String?
  price       Int?     // stored in cents
  visible     Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  store       Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  images      StoreItemImage[]

  @@index([storeId])
}

model StoreItemImage {
  id          String @id @default(uuid())
  storeItemId String

  imageUrl    String
  order       Int    @default(0)

  storeItem   StoreItem @relation(fields: [storeItemId], references: [id], onDelete: Cascade)
}


/* =========================
   AUTH (NextAuth)
========================= */

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
