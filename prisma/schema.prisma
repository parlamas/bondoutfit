generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* =========================
   ENUMS
========================= */

enum UserRole {
  CUSTOMER
  STORE_MANAGER
}

enum VisitStatus {
  SCHEDULED
  COMPLETED
  MISSED
  CANCELLED
}

enum StoreItemCategory {
  CLOTHING
  FOOTWEAR
  ACCESSORIES
}

enum StoreImageType {
  LOGO
  GALLERY
}

/* =========================
   USER
========================= */

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  password      String?
  emailVerified DateTime?
  role          UserRole @default(CUSTOMER)

  // Phone
  phoneCountry String?
  phoneArea    String?
  phoneNumber  String

  // Address
  city  String
  state String
  zip   String

  // Optional profile
  age        Int?
  gender     String?
  heightCm   Int?
  weightKg   Int?
  occupation String?

  // Relations
  stores   Store[]
  visits   Visit[]
  accounts Account[]
  sessions Session[]

  // Tokens
  verificationToken         String?   @unique
  verificationTokenExpires  DateTime?
  resetPasswordToken        String?   @unique
  resetPasswordTokenExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/* =========================
   STORE
========================= */

model Store {
  id        String @id @default(cuid())
  managerId String

  name     String
  email    String?
  currency String @default("EUR")

  // Phone
  phoneCountry String?
  phoneArea    String?
  phoneNumber  String

  // Address
  country      String
  city         String
  state        String
  zip          String
  street       String
  streetNumber String
  floor        String?

  // Business info
  openingHours Json?
  closedDates  DateTime[]

  categories String[]

  // Relations
  manager         User                 @relation(fields: [managerId], references: [id], onDelete: Cascade)
  visits          Visit[]
  discounts       Discount[]
  items           StoreItem[]
  images          StoreImage[]
  weeklyDiscounts StoreWeeklyDiscount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/* =========================
   STORE IMAGES (LOGO / GALLERY)
========================= */

model StoreImage {
  id       String         @id @default(uuid())
  storeId  String

  imageUrl String
  type     StoreImageType
  order    Int            @default(0)

  store    Store          @relation(fields: [storeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([storeId])
}

/* =========================
   STORE WEEKLY DISCOUNTS
========================= */

model StoreWeeklyDiscount {
  id        String   @id @default(uuid())
  storeId   String

  dayOfWeek Int      // 0 = Sunday â€¦ 6 = Saturday
  startTime String   // HH:mm
  endTime   String   // HH:mm

  percent   Float?
  amount    Float?

  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([storeId])
}

/* =========================
   STORE ITEMS
========================= */

model StoreItem {
  id          String   @id @default(uuid())
  storeId     String

  name        String
  category    StoreItemCategory
  description String?
  price       Int?     // cents
  visible     Boolean  @default(true)

  store   Store            @relation(fields: [storeId], references: [id], onDelete: Cascade)
  images  StoreItemImage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
}

model StoreItemImage {
  id          String @id @default(uuid())
  storeItemId String

  imageUrl    String
  order       Int    @default(0)

  storeItem   StoreItem @relation(fields: [storeItemId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@index([storeItemId])
}


/* =========================
   VISIT
========================= */

model Visit {
  id         String  @id @default(cuid())
  userId     String
  storeId    String
  discountId String?

  scheduledDate DateTime
  scheduledTime String
  actualVisit   DateTime?

  status VisitStatus @default(SCHEDULED)

  discountUnlocked Boolean @default(false)
  discountUsed     Boolean @default(false)
  discountAmount   Float?

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  store    Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  discount Discount? @relation(fields: [discountId], references: [id])

  createdAt DateTime @default(now())

  @@index([storeId])
}

/* =========================
   DISCOUNT (EVENT / VISIT BASED)
========================= */

model Discount {
  id      String @id @default(cuid())
  storeId String

  title           String
  description     String
  discountPercent Float
  discountAmount  Float?
  validFrom       DateTime
  validTo         DateTime
  maxUses         Int?
  currentUses     Int      @default(0)
  svdOnly         Boolean  @default(true)

  store  Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  visits Visit[]

  createdAt DateTime @default(now())
}

/* =========================
   AUTH (NextAuth)
========================= */

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
