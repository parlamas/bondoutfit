generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  STORE_MANAGER
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  emailVerified DateTime?
  role          UserRole  @default(CUSTOMER)
  
  // For OAuth
  accounts      Account[]
  sessions      Session[]
  
  // Customer profile (SVD preparation)
phone        String?
customerCity String?
gender       String?
age          Int?
heightCm     Int?
weightKg     Int?
occupation   String?
visits       Visit[]
  
      // Store Manager-specific fields
  storeName       String?
  storePhone      String?

  // Store location
  country         String?
  city            String?
  street          String?
  streetNumber    String?
  floor           String?
  state           String?
  zip             String?

  // Store metadata
  categories      String[]

  discounts       Discount[]

  
  // Email verification
  verificationToken String? @unique
  verificationTokenExpires DateTime?
  
  // Password reset
  resetPasswordToken String? @unique
  resetPasswordTokenExpires DateTime?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Visit {
  id              String      @id @default(cuid())
  userId          String
  storeId         String

  scheduledDate   DateTime
  scheduledTime   String
  actualVisit     DateTime?

  status          VisitStatus @default(SCHEDULED)

  discountUnlocked Boolean    @default(false)
  discountUsed     Boolean    @default(false)
  discountAmount   Float?

  user            User        @relation(fields: [userId], references: [id])
  discount        Discount    @relation(fields: [storeId], references: [id])

  createdAt       DateTime    @default(now())
}

enum VisitStatus {
  SCHEDULED
  COMPLETED
  MISSED
  CANCELLED
}

model Discount {
  id              String   @id @default(cuid())
  storeManagerId  String
  title           String
  description     String
  discountPercent Float
  discountAmount  Float?
  validFrom       DateTime
  validTo         DateTime
  maxUses         Int?
  currentUses     Int      @default(0)
  svdOnly         Boolean  @default(true)
  
  storeManager    User     @relation(fields: [storeManagerId], references: [id])
  visits          Visit[]
  
  createdAt       DateTime @default(now())
}


