generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  STORE_MANAGER
}

enum VisitStatus {
  SCHEDULED
  COMPLETED
  MISSED
  CANCELLED
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  emailVerified DateTime?
  role          UserRole  @default(CUSTOMER)

  // Customer profile
  phone        String?
  customerCity String?
  age          Int?
  gender       String?
  heightCm     Int?
  weightKg     Int?
  occupation   String?

  // Relations
  stores   Store[]
  visits   Visit[]
  accounts Account[]
  sessions Session[]

  // Verification / reset
  verificationToken         String?   @unique
  verificationTokenExpires  DateTime?
  resetPasswordToken        String?   @unique
  resetPasswordTokenExpires DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id        String @id @default(cuid())
  managerId String

  name       String
  storePhone String?

  country      String
  city         String
  street       String
  streetNumber String
  floor        String?
  state        String?
  zip          String

  categories String[]

  manager   User       @relation(fields: [managerId], references: [id], onDelete: Cascade)
  visits    Visit[]
  discounts Discount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Visit {
  id         String  @id @default(cuid())
  userId     String
  storeId    String
  discountId String?

  scheduledDate DateTime
  scheduledTime String
  actualVisit   DateTime?

  status VisitStatus @default(SCHEDULED)

  discountUnlocked Boolean @default(false)
  discountUsed     Boolean @default(false)
  discountAmount   Float?

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  store    Store     @relation(fields: [storeId], references: [id], onDelete: Cascade)
  discount Discount? @relation(fields: [discountId], references: [id])

  createdAt DateTime @default(now())
}

model Discount {
  id      String @id @default(cuid())
  storeId String

  title           String
  description     String
  discountPercent Float
  discountAmount  Float?
  validFrom       DateTime
  validTo         DateTime
  maxUses         Int?
  currentUses     Int      @default(0)
  svdOnly         Boolean  @default(true)

  store  Store   @relation(fields: [storeId], references: [id], onDelete: Cascade)
  visits Visit[]

  createdAt DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
